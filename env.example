# =============================================================================
# Agentic Gemini Telegram Bot - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# 
# SECURITY NOTE: Never commit .env file to version control!
# Add .env to your .gitignore file
# =============================================================================

# ========================================
# REQUIRED SECRETS
# ========================================
# Get your Telegram Bot Token from @BotFather
BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# Get your Gemini API Key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# ========================================
# OPTIONAL CONFIGURATION
# ========================================
# Maximum number of concurrent users (default: 100)
MAX_CONCURRENT_USERS=100

# Maximum conversation messages per user (default: 20)
MAX_CONVERSATIONS_PER_USER=20

# User session timeout in minutes (default: 60)
USER_SESSION_TIMEOUT_MINUTES=60

# Maximum memory usage in MB (default: 500)
MAX_MEMORY_USAGE_MB=500

# Flask server configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5001

# ========================================
# DOCKER RESOURCE LIMITS
# ========================================
# Memory limits for Docker container
MAX_MEMORY_LIMIT=1G
MIN_MEMORY_LIMIT=256M

# CPU limits for Docker container
MAX_CPU_LIMIT=0.5
MIN_CPU_LIMIT=0.1

# ========================================
# EXAMPLE VALUES (for testing)
# ========================================
# BOT_TOKEN=1234567890:ABCDEFGHIJKLMNOPQRSTUVWXYZ-1234567890
# GEMINI_API_KEY=AIzaSyC8BsQ-abcdefghijklmnopqrstuvwxyz1234567890 